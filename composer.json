{
    "name": "oxid-solution-catalysts/unzer",
    "description": "OXID eSales unzer payment module for OXID",
    "type": "oxideshop-module",
    "keywords": ["oxid", "modules", "eShop", "unzer", "payment"],
    "homepage": "https://www.oxid-esales.com",
    "license": ["GPL-3.0"],
    "extra": {
        "oxideshop": {
            "target-directory": "osc/unzer"
        }
    },
    "require": {
        "unzerdev/php-sdk": "^v1.1",
        "webmozart/path-util": "^2.3.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "oxid-esales/oxideshop-ce": "^v6.8.0",
        "vimeo/psalm": "^4.13"
    },
    "autoload": {
        "psr-4": {
            "OxidSolutionCatalysts\\Unzer\\": "src",
            "OxidSolutionCatalysts\\Unzer\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "psalm": "psalm --show-info=true --no-cache",
        "psalm-report": "psalm --show-info=true --no-cache --report=logs/psalm.sonarqube.json",
        "psalm-errors": "psalm --no-cache",
        "psalm-automatic": "psalm --alter --issues=MissingReturnType,MissingParamType",
        "phpcs": "phpcs --standard=Tests/phpcs.xml",
        "phpcbf": "phpcbf --standard=Tests/phpcs.xml"
    },
    "config": {
        "allow-plugins": {
            "oxid-esales/oxideshop-unified-namespace-generator": true,
            "oxid-esales/oxideshop-composer-plugin": true
        }
    }
}
