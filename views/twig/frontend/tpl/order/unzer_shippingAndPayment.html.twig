{% set sPaymentID = payment.getId() %}
{% set unzerpub = oViewConf.getUnzerPubKey() %}
<form action="{{ oViewConf.getSslSelfLink()|raw }}" method="post"
      id="orderShipping">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="payment">
    <input type="hidden" name="fnc" value="">
    <h4 class="card-header card-title card-header-edit d-flex justify-content-between align-items-center">
        {{ translate({ ident: "SHIPPING_CARRIER" }) }}
        <button type="submit" class="btn"
                title="{{ translate({ ident: "EDIT" }) }}">
            <svg aria-hidden="true">
                <use xlink:href="#pencil"></use>
            </svg>
        </button>
    </h4>
    {% set oShipSet = oView.getShipSet() %}
    <div class="card-body">
        {{ oShipSet.oxdeliveryset__oxtitle.value }}
    </div>
</form>
<form action="{{ oViewConf.getSslSelfLink()|raw }}" method="post"
      id="orderPayment">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="payment">
    <input type="hidden" name="fnc" value="">
    <h4 class="card-header card-title card-header-edit d-flex justify-content-between align-items-center">
        {{ translate({ ident: "PAYMENT_METHOD" }) }}
        <button type="submit" class="btn"
                title="{{ translate({ ident: "EDIT" }) }}">
            <svg aria-hidden="true">
                <use xlink:href="#pencil"></use>
            </svg>
        </button>
    </h4>
</form>
<div class="card-body">
    {% set payment = oView.getPayment() %}
    {{ payment.oxpayments__oxdesc.value }}
    {% if sPaymentID == "oscunzer_card" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_card.html.twig" %}
    {% elseif sPaymentID == "oscunzer_eps" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_eps_charge.html.twig" %}
    {% elseif sPaymentID == "oscunzer_ideal" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_ideal.html.twig" %}
    {% elseif sPaymentID == "oscunzer_installment" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_installment.html.twig" %}
    {% elseif sPaymentID == "oscunzer_invoice" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_invoice.html.twig" %}
    {% elseif sPaymentID == "oscunzer_applepay" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_applepay.html.twig" %}
    {% elseif sPaymentID == "oscunzer_sepa" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_sepa.html.twig" %}
    {% elseif sPaymentID == "oscunzer_sepa - secured" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_sepa_secured.html.twig" %}
    {% elseif sPaymentID == "oscunzer_paypal" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_paypal.html.twig" %}
    {% elseif sPaymentID == "oscunzer_installment_paylater" %}
        {% include "@osc-unzer/frontend/tpl/order/unzer_installment_paylater.html.twig" %}
    {% endif %}
</div>
