{% block unzer_jquery %}
    {# we use original script tag instead of oxscript because of the additional params #}
    <script
            src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
{% endblock %}
{% block unzer_js %}
    {{ script({ include: "https://static.unzer.com/v1/unzer.js", dynamic: __oxid_include_dynamic }) }}
{% endblock %}
{% block unzer_css %}
    {{ style({ include: "https://static.unzer.com/v1/unzer.css" }) }}
    {% set payment = oView.getPayment() %}
    {% if payment.getId() is same as('oscunzer_applepay') %}
        {{ style({ include: oViewConf.getModuleUrl('osc-unzer', 'out/src/css/applepay_button.css') }) }}
    {% endif %}
{% endblock %}
