{% include "headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate} %}

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}

<form name="transfer" id="transfer" action="{{ oViewConf.getSelfLink() }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="oxid" value="{{ oxid }}">
    <input type="hidden" name="cl" value="order_main">
</form>

<div id="liste" style="margin:0;">
    {% if not oUnzerTransactions %}
        {{ translate({ ident: "OSCUNZER_NO_UNZER_ORDER" }) }}
    {% else %}
        <table>
            <tbody>
                <tr>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_CREATED" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_SHORTID" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_TRACEID" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_CUSTOMERID" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_STATUS" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_TRANSACTION_TYPEID" }) }}</td>
                </tr>
                {% for oUnzerTransaction in oUnzerTransactions %}
                    {% set transaction_state = oUnzerTransaction.getUnzerState()|escape %}
                    <tr>
                        <td>{{ oUnzerTransaction.getUnzerCreated()|escape }}</td>
                        <td>{{ oUnzerTransaction.getUnzerShortId()|escape }}</td>
                        <td>{{ oUnzerTransaction.getUnzerTraceId()|escape }}</td>
                        <td>{{ oUnzerTransaction.getUnzerCustomerId()|escape }}</td>
                        <td>{{ 'OSCUNZER_TRANSACTION_STATUS_'|cat("transaction_state")|translate }}</td>
                        <td>{{ oUnzerTransaction.getUnzerTypeId()|escape }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% block unzer_ship %}
        {% if blShipment %}
            <br><br>
            <h3>{{ translate({ ident: "OSCUNZER_SHIPMENTS" }) }}</h3>
            {% if aShipments %}
                <table>
                    <tbody>
                        <tr>
                            <td class="listheader">{{ translate({ ident: "GENERAL_DATE" }) }}</td>
                            <td class="listheader">{{ translate({ ident: "OSCUNZER_SHIP_ID" }) }}</td>
                            <td class="listheader">{{ translate({ ident: "OSCUNZER_ORDER_AMOUNT" }) }}</td>
                            <td class="listheader">{{ translate({ ident: "ORDER_MAIN_BILLNUM" }) }}</td>
                        </tr>
                        {% for oUnzerShipment in aShipments %}
                            {% if not oUnzerShipment.success %}
                                {% set unzStyle = 'class ="listitem3"' %}
                            {% else %}
                                {% set unzStyle = '' %}
                            {% endif %}
                            <tr>
                                <td {{ unzStyle }}>{{ oUnzerShipment.shipingDate|escape }}</td>
                                <td {{ unzStyle }}>{{ oUnzerShipment.shipId|escape }}</td>
                                <td {{ unzStyle }}>{{ oUnzerShipment.amount|escape|number_format(2, '.', ' ') }}</td>
                                <td {{ unzStyle }}>{{ oUnzerShipment.invoiceid|escape }}</td>
                            </tr>
                            {% endfor %}
                    </tbody>
                </table>
            {% endif %}
            {% if not blSuccessShipped %}
                {{ translate({ ident: "OSCUNZER_NOSHIPINGYET" }) }}<br>
                <form name="uzr" id="uzr_collect" action="{{ oViewConf.getSelfLink() }}" method="post">
                    <input type="hidden" name="cl" value="unzer_admin_order">
                    <input type="hidden" name="fnc" value="sendShipmentNotification">
                    <input type="hidden" name="oxid" value="{{ oxid }}">
                    <input type="hidden" name="unzerid" value="{{ sPaymentId }}">
                    <button type="submit">{{ translate({ ident: "OSCUNZER_SHIPMENT_NOTIFICATION" }) }}</button>
                </form>
            {% endif %}
            {% if errShip %}
                <div style="color: red">{{ errShip }}</div>
            {% endif %}
        {% endif %}
    {% endblock %}
    {% block unzer_collect %}
        {% if AuthId %}
            {% if AuthAmountRemaining > 0 %}
                <h3>{{ translate({ ident: "OSCUNZER_AUTHORIZATION" }) }}</h3>
                <form name="uzr" id="uzr_collect" action="{{ oViewConf.getSelfLink() }}" method="post">
                    <input type="hidden" name="cl" value="unzer_admin_order">
                    <input type="hidden" name="fnc" value="doUnzerCollect">
                    <input type="hidden" name="oxid" value="{{ oxid }}">
                    <input type="hidden" name="unzerid" value="{{ sPaymentId }}">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <b>{{ translate({ ident: "OSCUNZER_REMAING_AMOUNT", suffix: "COLON" }) }}</b>{{ AuthAmountRemaining|number_format(2, '.', ' ') }} {{ AuthCur }}<br>
                                    <b>{{ translate({ ident: "OSCUNZER_ORDER_AMOUNT", suffix: "COLON" }) }}</b>{{ AuthAmount|number_format(2, '.', ' ') }} {{ AuthCur }}<br>
                                </td>
                                <td><input type="text" name="amount" value="{{ AuthAmountRemaining|number_format(2, '.', ' ') }}"> {{ AuthCur }}</td>
                                <td><button type="submit">{{ translate({ ident: "OSCUNZER_CHARGE_COLLECT" }) }}</button></td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            {% endif %}
            {% if AuthAmountRemaining == AuthAmount %}
                <form name="uzr" id="uzr_collect" action="{{ oViewConf.getSelfLink() }}" method="post">
                    <input type="hidden" name="cl" value="unzer_admin_order">
                    <input type="hidden" name="fnc" value="doUnzerAuthorizationCancel">
                    <input type="hidden" name="oxid" value="{{ oxid }}">
                    <input type="hidden" name="unzerid" value="{{ sPaymentId }}">
                    <table>
                        <tbody>
                        <tr>
                            <td>{{ translate({ ident: "OSCUNZER_AUTHORIZE_CANCEL_POSSIBLE" }) }}</td>
                            <td><button type="submit">{{ translate({ ident: "OSCUNZER_AUTHORIZE_CANCEL" }) }}</button></td>
                        </tr>
                        </tbody>
                    </table>
                </form>
            {% endif %}
        {% endif %}
        {% if errAuth %}
            <div style="color: red">{{ errAuth }}</div>
        {% endif %}
    {% endblock %}

    {% block unzer_refund %}
        <br><br>
        {% if aCharges %}
            <h3>{{ translate({ ident: "OSCUNZER_CHARGES" }) }}</h3>
            <table>
                <tbody>
                    <tr>
                        <td class="listheader">{{ translate({ ident: "GENERAL_DATE" }) }}</td>
                        <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGE_ID" }) }}</td>
                        <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGED_AMOUNT" }) }}</td>
                        <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGED_CANCELLED" }) }}</td>
                        {% if blCancelReasonReq %}
                            <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGE_CANCELREASON" }) }}</td>
                        {% endif %}
                        <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGE_CANCELAMOUNT" }) }}</td>
                        <td class="listheader"> </td>
                    </tr>

                    {% for oUnzerCharge in aCharges %}
                    <tr>
                        <form name="uzr" id="uzr_{{ oUnzerCharge.chargeId }}" action="{{ oViewConf.getSelfLink() }}" method="post">
                            {{ oViewConf.getHiddenSid() }}
                            <input type="hidden" name="chargeid" value="{{ oUnzerCharge.chargeId }}">
                            <input type="hidden" name="chargedamount" value="{{ oUnzerCharge.chargedAmount }}">
                            <input type="hidden" name="unzerid" value="{{ sPaymentId }}">
                            <input type="hidden" name="cl" value="unzer_admin_order">
                            <input type="hidden" name="fnc" value="doUnzerCancel">
                            <input type="hidden" name="oxid" value="{{ oxid }}">

                            <td>{{ oUnzerCharge.chargeDate|escape }}</td>
                            <td>{{ oUnzerCharge.chargeId|escape }}</td>
                            <td>{{ oUnzerCharge.chargedAmount|escape|number_format(2, '.', ' ') }} {{ uzrCurrency }}</td>
                            {% if oUnzerCharge.cancellationPossible %}
                                <td>
                                    {{ oUnzerCharge.cancelledAmount|escape|number_format(2, '.', ' ') }} {{ uzrCurrency }}
                                </td>
                                {% if blCancelReasonReq %}
                                    <td>
                                        <select name="reason" id="reason_{{ oUnzerCharge.chargeId }}">
                                            <option value="CANCEL">{{ translate({ ident: "OSCUNZER_REASON_CANCEL" }) }}</option>
                                            <option value="RETURN">{{ translate({ ident: "OSCUNZER_REASON_RETURN" }) }}</option>
                                            <option value="CREDIT">{{ translate({ ident: "OSCUNZER_REASON_CREDIT" }) }}</option>
                                        </select>
                                    </td>
                                {% endif %}
                                <td>
                                    <input type="text"
                                           name="amount"
                                           id="amount_{{ oUnzerCharge.chargeId }}"
                                           value="{{ oUnzerCharge.chargedAmount - oUnzerCharge.cancelledAmount | format("%.2f") }}"
                                           {% if not oUnzerCharge.cancellationPossible %}disabled{% endif %}>
                                    {{ uzrCurrency }}
                                </td>
                                <td>
                                    <input type="submit"
                                           id="submit_{{ oUnzerCharge.chargeId }}"
                                           {% if not oUnzerCharge.cancellationPossible %}disabled{% endif %}
                                           value="{{ translate({ ident: "OSCUNZER_PAYOUT" }) }}">
                                </td>
                                {% capture assign = "cancelConfirm" %}
                                    const inAmount = document.getElementById('amount_{{ oUnzerCharge.chargeId }}');
                                    const form = document.getElementById('uzr_{{ oUnzerCharge.chargeId }}');
                                    form.addEventListener('submit', function (e) {
                                    if (window.confirm('{{ translate({ ident: "OSCUNZER_CANCEL_ALERT" }) }}' + ' ' + inAmount.value)) {
                                    return true;
                                    } else {
                                    return false;
                                    }
                                    });
                                {% endcapture %}
                                {{ script({ add: cancelConfirm, dynamic: __oxid_include_dynamic }) }}
                            {% else %}
                                <td colspan="3"></td>
                            {% endif %}
                        </form>
                    </tr>
                    {% endfor %}
                    {% if errCancel %}
                        <tr>
                            <td colspan="{% if blCancelReasonReq %}7{% else %}6{% endif %}"><div style="color: red">{{ errCancel }}</div></td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        {% endif %}
        {% endblock %}

    {% block unzer_cancellation %}
    <br><br>
        {% if aCancellations %}
            <h3>{{ translate({ ident: "OSCUNZER_CANCELLATIONS" }) }}</h3>
            <table>
                <tr>
                    <td class="listheader">{{ translate({ ident: "GENERAL_DATE" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_CANCEL_ID" }) }}</td>
                    <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGE_CANCELAMOUNT" }) }}</td>
                    {% if blCancelReasonReq %}
                        <td class="listheader">{{ translate({ ident: "OSCUNZER_CHARGE_CANCELREASON" }) }}</td>
                    {% endif %}
                </tr>
                {% for oUnzerCancel in aCancellations %}
                    <tr>
                        <td>{{ oUnzerCancel.cancelDate|escape }}</td>
                        <td>{{ oUnzerCancel.cancellationId|escape }}</td>
                        <td>{{ oUnzerCancel.cancelledAmount|escape|number_format(2, '.', ' ') }} {{ uzrCurrency }}</td>
                        {% if blCancelReasonReq %}
                            <td>{{ oUnzerCancel.cancelReason|escape }}</td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
    {% endblock %}
</div>

